<!DOCTYPE html>
<html>
<head>
  <title>Myapp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if flash[:notice] || flash[:alert] %>
	<article id="msg-notice-container" class="type-system-slab">
	  <p class="notice"><%= notice %></p>
	  <p class="alert"><%= alert %></p>
	</article>
<% end %>
      
<%= yield %>

<div id="bg-screen-for-modal">
  <section class="modal-inner">
    <div id="loader-effect" class="sk-cube-grid">
      <div class="sk-cube sk-cube1"></div>
      <div class="sk-cube sk-cube2"></div>
      <div class="sk-cube sk-cube3"></div>
      <div class="sk-cube sk-cube4"></div>
      <div class="sk-cube sk-cube5"></div>
      <div class="sk-cube sk-cube6"></div>
      <div class="sk-cube sk-cube7"></div>
      <div class="sk-cube sk-cube8"></div>
      <div class="sk-cube sk-cube9"></div>
    </div>
  </section>
  <!-- CLOSE ICON FOR MODAL -->
  <img id="modal-close-icon" src="<%= asset_path('close-icon.png') %>">
</div>

<script>
  $('#modal-close-icon').on('click', function() {
      $('#bg-screen-for-modal').removeClass('open')
  })
</script>

</body>
</html>

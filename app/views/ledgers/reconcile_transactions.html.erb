
<article class="type-system-slab">
    <header class="show-nav" role="banner">
       <div>  
          <p><%= link_to 'Back', url_for(:back) %></p>
       </div> 
       <div>  
          <a href="/welcome/auth_dash"><img id="user-to-auth-landing" src="<%= asset_path('pb-logo.png') %>"></a>
       </div>  
       <div>  
          <p><a href="//www.profitbees.com" target="_blank">ProfitBees</a></p>
       </div> 
    </header>
</article>

<section class="layout-container">
  <article class="type-system-slab centered-transparent-container">
      <h1>Reconcilation manager</h2>
  </article>
  <br><br><br>
</section>

<section class="layout-container">
  <article class="type-system-slab">
        <div class="grid-items-lines">
          <% @transactions.each do |transaction| %>
            <% id = transaction.id %>
            <a href="<%= edit_transaction_path(id) %>" class="grid-item" data-remote="true">
              <img src="https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/placeholder_square.png" alt="">
              <h1><span style="color:#F9B233">
                <% if transaction.type == "Debit" %>
                  <%= transaction.amount.to_f.round(2) %></span> | 
                <% else %>
                  - <%= transaction.amount.to_f.round(2) %></span> | 
                <% end %>
                <%= transaction.tax.to_f.round(2) %></h1>
              <p style="font-size:90%;"><%= truncate(transaction.bank_description, length: 60) %></p>
              <h4><%= transaction.acc_date.strftime("%d/%m/%Y") %></h4>
            </a>
          <% end %>
          <div class="right-cover"></div>
          <div class="bottom-cover"></div>
        </div>
  </article>
  <br><br><br>
</section>



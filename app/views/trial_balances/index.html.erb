<section class="layout-container">
      <article class="type-system-slab">
            <div class="nice-in-box-element">

                 <br><br>
                 <h3> Generated by you</h3>
                 <br><br>

                 <div class="cards">

                 	  <% @data.each do |group| %>

		                    <div class="card" data-href="<% %>">
		                        <div class="card-image">
		                          <img src="https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/mountains.png" alt="">
		                        </div>
		                        <div class="card-header">
		                          Generated || Ago
		                        </div>
		                        <div class="card-copy">
		                          <p>
		                          	<% group.pop.each_with_index do |included_ledger, i| %>
		                          	   <%= link_to "Cash-Hive #{i}", ledger_path(included_ledger.guid_ledger) %> | 
					                <% end %>
		                          </p>
		                        </div>
		                    </div>

		                <% end %>

                      
                  </div>
                  <!-- END OF CARDS -->
             </div>
             <!-- END OF NICE BOX ELEMENT -->
      </article>
</section>





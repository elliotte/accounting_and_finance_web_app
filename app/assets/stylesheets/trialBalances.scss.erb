
div.trial-balance-option {

  @include span-columns(4);
  @include omega();

  margin-top: 3em;
  margin-right: 1em;

  text-align: center;
  -webkit-box-shadow: 9px 9px 0px -4px rgba(249,178,51,0.41);
  -moz-box-shadow: 9px 9px 0px -4px rgba(249,178,51,0.41);
  box-shadow: 9px 9px 0px -4px rgba(249,178,51,0.41);
  border: 1px solid $bee-orange;
  border-radius: 5px;

  img {
      display: block;
      height: 3em;
      margin: 2em auto 2em;
      opacity: 0.4;
      border-radius: 15px;
  }
  a {
  	color: black;
  	margin-bottom: 2em;
  }

}
